<?xml version="1.0"?>
<environment>
    <substeps>200</substeps>
    <render>true</render>

    <plugin name="episode_timer" type="episode_timer">
        <max_steps>50</max_steps>
    </plugin>

    <plugin name="molex_spawner" type="spawn_multiple">
        <num_models>10</num_models>
        <model name="molex">
            <xyz>0.0 0.4 0.9</xyz>
            <urdf>molex/molex.urdf</urdf>
            <plugin name="random_respawn" type="random_respawn">
                <position_range>0.3 0.3 0.5</position_range>
                <rotation_range>3.1415 3.1415 3.1415</rotation_range>
            </plugin>
        </model>
    </plugin>

    <model name="plane">
        <urdf>plane.urdf</urdf>
    </model>

    <model name="table">
        <xyz>0.0 0.4 0.0</xyz>
        <urdf>table/table.urdf</urdf>
    </model>

    <model name="robot">
        <urdf>rs007n/rs007n.urdf</urdf>
        <xyz>0.0 -0.22 0.5</xyz>

        <plugin name="position_controller" type="position_controller">
            <rest_position>0.0 -0.32 -1.98 -0.08 0.0 0.0</rest_position>
            <end_effector_frame>gripper_joint</end_effector_frame>
        </plugin>

        <plugin name="joint_state" type="joint_state_sensor"/>

        <plugin name="be_lazy" type="electricity_cost"/>

        <plugin name="gripper_camera" type="camera">
            <rpy>0.0 0.0 3.1415</rpy>
            <base_frame>gripper_joint</base_frame>
            <resolution>100 100</resolution>
        </plugin>
    </model>

</environment>
