<?xml version="1.0"?>
<environment>
    <episode_length>500</episode_length>
    <substeps>200</substeps>
    <render>true</render>

    <plugin name="episode_timer" type="episode_timer">
        <max_steps>50</max_steps>
    </plugin>

    <model name="plane">
        <urdf>plane.urdf</urdf>
    </model>

    <model name="table">
        <xyz>0.0 0.4 0.0</xyz>
        <urdf>table/table.urdf</urdf>
    </model>

    <model name="ur5_l">
        <urdf>ur5/ur5_robot.urdf</urdf>
        <xyz>-0.55 0.4 0.65</xyz>
        <rpy>0.0 0.0 -1.57</rpy>

        <plugin name="position_controller" type="position_controller">
            <rest_position>-0.07 -0.73 -1.93 -0.36 -0.03 -0.06</rest_position>
            <end_effector_frame>wrist_3_joint</end_effector_frame>
        </plugin>

        <plugin name="slap" type="extra_reach_target">
            <target_position>0.0 0.4 1.3</target_position>
            <frame>wrist_3_joint</frame>
        </plugin>

        <plugin name="joint_state" type="joint_state_sensor"/>
    </model>

    <model name="ur5_r">
        <urdf>ur5/ur5_robot.urdf</urdf>
        <xyz>0.55 0.4 0.65</xyz>
        <rpy>0.0 0.0 1.57</rpy>

        <plugin name="position_controller" type="position_controller">
            <rest_position>-0.07 -0.73 -1.93 -0.36 -0.03 -0.06</rest_position>
            <end_effector_frame>wrist_3_joint</end_effector_frame>
        </plugin>

        <plugin name="slap" type="reach_target">
            <target_position>0.0 0.4 1.3</target_position>
            <frame>wrist_3_joint</frame>
        </plugin>

        <plugin name="joint_state" type="joint_state_sensor"/>
    </model>
</environment>
