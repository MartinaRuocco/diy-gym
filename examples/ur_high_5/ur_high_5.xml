<?xml version="1.0"?>
<environment>
    <addon name="episode_timer" type="episode_timer">
        <max_steps>50</max_steps>
    </addon>

    <model name="plane">
        <urdf>plane.urdf</urdf>
    </model>

    <model name="table">
        <xyz>0.0 0.4 0.0</xyz>
        <urdf>table/table.urdf</urdf>
    </model>

    <model name="ur5_l">
        <urdf>ur5/ur5_robot.urdf</urdf>
        <xyz>-0.55 0.4 0.65</xyz>
        <rpy>0.0 0.0 -1.57</rpy>

        <addon name="controller" type="position_controller">
            <rest_position>-0.07 -0.73 -1.93 -0.36 -0.03 -0.06</rest_position>
            <end_effector_frame>wrist_3_joint</end_effector_frame>
        </addon>

        <addon name="slap" type="reach_target">
            <target_position>0.0 0.4 1.3</target_position>
            <frame>wrist_3_joint</frame>
        </addon>

        <addon name="joint_state" type="joint_state_sensor"/>
    </model>

    <model name="ur5_r">
        <urdf>ur5/ur5_robot.urdf</urdf>
        <xyz>0.55 0.4 0.65</xyz>
        <rpy>0.0 0.0 1.57</rpy>

        <addon name="controller" type="position_controller">
            <rest_position>-0.07 -0.73 -1.93 -0.36 -0.03 -0.06</rest_position>
            <end_effector_frame>wrist_3_joint</end_effector_frame>
        </addon>

        <addon name="slap" type="reach_target">
            <target_position>0.0 0.4 1.3</target_position>
            <frame>wrist_3_joint</frame>
        </addon>

        <addon name="joint_state" type="joint_state_sensor"/>
    </model>
</environment>
