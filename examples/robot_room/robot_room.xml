<?xml version="1.0"?>
<environment>
    <substeps>200</substeps>
    <render>true</render>
    <camera_yaw>131</camera_yaw>
    <camera_pitch>-25</camera_pitch>
    <camera_distance>1.2</camera_distance>

    <plugin name="timer" type="episode_timer">
        <max_steps>25</max_steps>
    </plugin>

    <plugin name="molex_spawner" type="spawn_multiple">
        <num_models>20</num_models>
        <model name="molex">
            <xyz>0.0 0.2 0.9</xyz>
            <urdf>duck_vhacd.urdf</urdf>
            <plugin name="random_respawn" type="random_respawn">
                <position_range>0.3 0.3 0.5</position_range>
                <rotation_range>3.1415 3.1415 3.1415</rotation_range>
            </plugin>
        </model>
    </plugin>

    <model name="plane">
        <urdf>plane.urdf</urdf>
    </model>

    <model name="robot">
        <urdf>kuka_iiwa/model.urdf</urdf>
        <xyz>0.0 -0.4 0.0</xyz>

        <plugin name="controller" type="position_controller">
            <rest_position>-0.94 0.0 -0.59 1.86 0.88 0.0 0.0</rest_position>
            <end_effector_frame>lbr_iiwa_joint_7</end_effector_frame>
        </plugin>

        <plugin name="joint_state" type="joint_state_sensor"/>

        <plugin name="be_lazy" type="electricity_cost"/>

        <plugin name="gripper_camera" type="camera">
            <xyz>0.0 0.0 0.1</xyz>
            <rpy>0.0 0.0 3.1415</rpy>
            <base_frame>lbr_iiwa_joint_7</base_frame>
            <resolution>200 200</resolution>
        </plugin>
    </model>

</environment>
